name: ğŸš€ Netlify Deployment

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main]

env:
  NODE_VERSION: '20.x'

jobs:
  test-and-deploy:
    name: ğŸ§ª Test & Deploy to Netlify
    runs-on: ubuntu-latest
    environment: production

    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: ğŸ”§ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'pnpm'
          cache-dependency-path: 'pnpm-lock.yaml'

      - name: ğŸ“¦ Install dependencies
        run: pnpm install --frozen-lockfile

      - name: ğŸ” Type Check
        run: pnpm --filter @facturacion/web type-check

      - name: ğŸ§¹ Lint Check
        run: pnpm --filter @facturacion/web lint

      - name: ğŸ§ª Run Tests
        run: pnpm --filter @facturacion/web test --passWithNoTests

      - name: ğŸ“Š Generate Coverage
        run: pnpm --filter @facturacion/web test --coverage --passWithNoTests
        continue-on-error: true

      - name: ğŸ—ï¸ Build for Production
        run: pnpm --filter @facturacion/web build
        env:
          NODE_ENV: production

      - name: ğŸš€ Deploy to Netlify
        run: |
          npm install -g netlify-cli
          netlify deploy --prod --dir=apps/web/out
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
          NETLIFY_SITE_ID: ${{ secrets.NETLIFY_SITE_ID }}

  preview-deploy:
    name: ğŸ‘€ Deploy Preview
    runs-on: ubuntu-latest
    if: github.event_name == 'pull_request'

    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v4

      - name: ğŸ”§ Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: 'pnpm'
          cache-dependency-path: 'pnpm-lock.yaml'

      - name: ğŸ“¦ Install dependencies
        run: pnpm install --frozen-lockfile

      - name: ğŸ—ï¸ Build Preview
        run: pnpm --filter @facturacion/web build
        env:
          NODE_ENV: production

      - name: ğŸš€ Deploy Preview
        run: |
          npm install -g netlify-cli
          netlify deploy --dir=apps/web/out
        env:
          NETLIFY_AUTH_TOKEN: ${{ secrets.NETLIFY_AUTH_TOKEN }}
          NETLIFY_SITE_ID: ${{ secrets.NETLIFY_SITE_ID }}
