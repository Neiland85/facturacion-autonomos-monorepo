{
  "openapi": {
    "definition": {
      "openapi": "3.0.3",
      "info": {
        "title": "Facturación Autónomos - Monorepo API",
        "version": "1.0.0",
        "description": "Sistema completo de facturación para autónomos con múltiples APIs especializadas",
        "contact": {
          "name": "Equipo de Desarrollo",
          "email": "dev@facturacion-autonomos.com"
        },
        "license": {
          "name": "MIT",
          "url": "https://opensource.org/licenses/MIT"
        }
      },
      "servers": [
        {
          "url": "http://localhost:3001/api/v1",
          "description": "API Facturas - Desarrollo"
        },
        {
          "url": "http://localhost:3002/api/v1",
          "description": "API Tax Calculator - Desarrollo"
        },
        {
          "url": "https://api.facturacion-autonomos.com/v1",
          "description": "API Facturas - Producción"
        },
        {
          "url": "https://api.facturacion-autonomos.com/tax/v1",
          "description": "API Tax Calculator - Producción"
        }
      ],
      "components": {
        "securitySchemes": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          },
          "apiKey": {
            "type": "apiKey",
            "in": "header",
            "name": "X-API-Key"
          }
        }
      },
      "security": [
        {
          "bearerAuth": []
        },
        {
          "apiKey": []
        }
      ]
    },
    "apis": [
      "./openapi/*.yaml",
      "./apps/*/src/**/*.ts",
      "./packages/*/src/**/*.ts",
      "./openapi/unified-api.openapi.yaml",
      "./openapi/auth-service.openapi.yaml",
      "./openapi/invoice-service.openapi.yaml",
      "./openapi/tax-calculator.openapi.yaml",
      "./openapi/facturas.openapi.yaml"
    ]
  },
  "apis": {
    "facturas": {
      "title": "API de Facturas",
      "description": "Gestión completa de facturas, clientes y reportes",
      "version": "1.0.0",
      "spec": "./openapi/facturas.openapi.yaml",
      "baseUrl": "http://localhost:3001",
      "docsPath": "/api-docs"
    },
    "taxCalculator": {
      "title": "API Tax Calculator",
      "description": "Cálculos fiscales y simulaciones tributarias",
      "version": "1.0.0",
      "spec": "./openapi/tax-calculator.openapi.yaml",
      "baseUrl": "http://localhost:3002",
      "docsPath": "/api-docs"
    }
  },
  "swagger": {
    "definition": {
      "swagger": "2.0",
      "info": {
        "title": "Facturación Autónomos API",
        "version": "1.0.0",
        "description": "Sistema de facturación para autónomos - Documentación Swagger 2.0"
      }
    },
    "apis": [
      "./openapi/*.yaml",
      "./apps/*/src/**/*.ts"
    ]
  },
  "redoc": {
    "title": "Facturación Autónomos - Documentación API Completa",
    "version": "1.0.0",
    "specs": [
      {
        "name": "API Facturas",
        "url": "./openapi/facturas.openapi.yaml"
      },
      {
        "name": "API Tax Calculator",
        "url": "./openapi/tax-calculator.openapi.yaml"
      }
    ],
    "options": {
      "theme": {
        "colors": {
          "primary": {
            "main": "#2563eb"
          }
        }
      },
      "hideDownloadButton": false,
      "expandResponses": "200,201",
      "requiredPropsFirst": true,
      "sortPropsAlphabetically": true,
      "showExtensions": true,
      "hideHostname": false,
      "hideLoading": false,
      "nativeScrollbars": false,
      "pathInMiddlePanel": false,
      "untrustedSpec": false,
      "hideSchemaPattern": false
    }
  },
  "postman": {
    "collections": [
      {
        "name": "Facturación Autónomos - API Facturas",
        "spec": "./openapi/facturas.openapi.yaml",
        "output": "./postman/facturas-collection.json"
      },
      {
        "name": "Facturación Autónomos - API Tax Calculator",
        "spec": "./openapi/tax-calculator.openapi.yaml",
        "output": "./postman/tax-calculator-collection.json"
      }
    ]
  },
  "insomnia": {
    "collections": [
      {
        "name": "Facturación Autónomos - Complete API",
        "specs": [
          "./openapi/facturas.openapi.yaml",
          "./openapi/tax-calculator.openapi.yaml"
        ],
        "output": "./insomnia/complete-workspace.json"
      }
    ]
  }
}