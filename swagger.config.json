{
  "openapi": {
    "definition": {
      "openapi": "3.0.3",
      "info": {
        "title": "TributariApp - Monorepo API",
        "version": "1.0.0",
        "description": "Sistema completo de facturación para autónomos con arquitectura de microservicios",
        "contact": {
          "name": "Equipo de Desarrollo",
          "email": "dev@tributariapp.com"
        },
        "license": {
          "name": "MIT",
          "url": "https://opensource.org/licenses/MIT"
        }
      },
      "servers": [
        {
          "url": "http://localhost:3000",
          "description": "API Gateway - Desarrollo"
        },
        {
          "url": "http://localhost:3001",
          "description": "Auth Service - Desarrollo"
        },
        {
          "url": "http://localhost:3002",
          "description": "Invoice Service - Desarrollo"
        },
        {
          "url": "http://localhost:3003",
          "description": "Subscription Service - Desarrollo"
        },
        {
          "url": "https://api.tributariapp.com",
          "description": "API Gateway - Producción"
        }
      ],
      "components": {
        "securitySchemes": {
          "bearerAuth": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          },
          "apiKey": {
            "type": "apiKey",
            "in": "header",
            "name": "X-API-Key"
          }
        }
      },
      "security": [
        {
          "bearerAuth": []
        }
      ]
    },
    "apis": [
      "./apps/*/src/**/*.ts",
      "./packages/*/src/**/*.ts"
    ]
  },
  "services": {
    "auth": {
      "title": "Auth Service API",
      "description": "Autenticación y gestión de usuarios",
      "version": "1.0.0",
      "baseUrl": "http://localhost:3001",
      "docsPath": "/api-docs"
    },
    "invoices": {
      "title": "Invoice Service API",
      "description": "Gestión completa de facturas y documentos",
      "version": "1.0.0",
      "baseUrl": "http://localhost:3002",
      "docsPath": "/api-docs"
    },
    "subscriptions": {
      "title": "Subscription Service API",
      "description": "Gestión de suscripciones y pagos con Stripe",
      "version": "1.0.0",
      "baseUrl": "http://localhost:3003",
      "docsPath": "/api-docs"
    }
  }
}