# Entorno de desarrollo
NODE_ENV=development
PORT=4000

# Servicios backend
AUTH_SERVICE_URL=http://localhost:4001
INVOICE_SERVICE_URL=http://localhost:4002
CLIENT_SERVICE_URL=http://localhost:4003
TAX_SERVICE_URL=http://localhost:4004
AEAT_SERVICE_URL=http://localhost:4005
PEPPOL_SERVICE_URL=http://localhost:4006
NOTIFICATION_SERVICE_URL=http://localhost:4007
STORAGE_SERVICE_URL=http://localhost:4008

# Timeouts (en millisegundos)
AUTH_SERVICE_TIMEOUT=5000
INVOICE_SERVICE_TIMEOUT=10000
CLIENT_SERVICE_TIMEOUT=5000
TAX_SERVICE_TIMEOUT=15000
AEAT_SERVICE_TIMEOUT=30000
PEPPOL_SERVICE_TIMEOUT=20000
NOTIFICATION_SERVICE_TIMEOUT=10000
STORAGE_SERVICE_TIMEOUT=15000

# Reintentos
AUTH_SERVICE_RETRIES=3
INVOICE_SERVICE_RETRIES=3
CLIENT_SERVICE_RETRIES=3
TAX_SERVICE_RETRIES=3
AEAT_SERVICE_RETRIES=5
PEPPOL_SERVICE_RETRIES=3
NOTIFICATION_SERVICE_RETRIES=5
STORAGE_SERVICE_RETRIES=3

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_SKIP_SUCCESS=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=gateway:

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=./logs/gateway.log

# Monitoreo
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=true
ENABLE_TRACING=false

# API Keys (para integraciones externas)
VALID_API_KEY=your-api-key-for-external-integrations
