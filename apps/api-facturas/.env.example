# Variables de entorno para API de Facturas

# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/facturacion_autonomos?schema=public"

# Configuración del servidor
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Límites de requests
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de archivos
UPLOAD_MAX_SIZE=10mb
UPLOAD_DIR=uploads

# Configuración de logs
LOG_LEVEL=debug
LOG_FILE=logs/api-facturas.log

# Configuración de Redis (opcional, para caché)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Configuración de monitoreo
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Configuración específica de desarrollo
DEBUG=true
SWAGGER_ENABLED=true
