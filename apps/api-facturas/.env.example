# Variables de entorno para API de Facturas

# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/facturacion_autonomos?schema=public"

# Configuración del servidor
PORT=3001
NODE_ENV=development

# JWT
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Límites de requests
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de archivos
UPLOAD_MAX_SIZE=10mb
UPLOAD_DIR=uploads

# SMTP para envío de emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion

# AEAT SII
AEAT_ENTORNO=pruebas
AEAT_NIF_EMISOR=tu_nif_aqui
AEAT_NOMBRE_RAZON_EMISOR=Tu Nombre o Razón Social
AEAT_CERTIFICADO_PATH=path/to/certificado.p12
AEAT_CERTIFICADO_PASSWORD=password_del_certificado

# URLs de servicios
SII_URL_PRUEBAS=https://prewww1.aeat.es/wlpl/SSII-FACT/ws/fe/SiiFactFEV1SOAP
SII_URL_PRODUCCION=https://www1.agenciatributaria.gob.es/wlpl/SSII-FACT/ws/fe/SiiFactFEV1SOAP

# Configuración de logs
LOG_LEVEL=debug
LOG_FILE=logs/api-facturas.log

# Configuración de Redis (opcional, para caché)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Configuración de monitoreo
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Configuración específica de desarrollo
DEBUG=true
SWAGGER_ENABLED=true
