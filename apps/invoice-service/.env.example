# Invoice Service Environment Variables
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3002
NODE_ENV=development
HOST=0.0.0.0

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/tributariapp_invoices"

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Service URLs
AUTH_SERVICE_URL=http://localhost:3003
API_GATEWAY_URL=http://localhost:3001
WEB_APP_URL=http://localhost:3000

# Tax Calculator Service
TAX_CALCULATOR_URL=http://localhost:3004

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
