# Web App (Next.js) Environment Variables
# Copy this file to .env.local and fill in your actual values

# ===========================================
# NEXT.JS CONFIGURATION
# ===========================================
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development

# ===========================================
# API CONFIGURATION
# ===========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_AUTH_SERVICE_URL=http://localhost:3003
NEXT_PUBLIC_INVOICE_SERVICE_URL=http://localhost:3002

# ===========================================
# AUTHENTICATION
# ===========================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here-minimum-32-characters

# ===========================================
# DATABASE (Client-side)
# ===========================================
# Note: Database connections should be handled server-side only

# ===========================================
# EXTERNAL SERVICES
# ===========================================
# Analytics
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_HOTJAR_ID=

# Social Media
NEXT_PUBLIC_FACEBOOK_APP_ID=
NEXT_PUBLIC_GOOGLE_CLIENT_ID=

# ===========================================
# FEATURE FLAGS
# ===========================================
NEXT_PUBLIC_ENABLE_DEBUG=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true

# ===========================================
# CDN & ASSETS
# ===========================================
NEXT_PUBLIC_CDN_URL=
NEXT_PUBLIC_ASSETS_URL=

# ===========================================
# MONITORING
# ===========================================
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_PROJECT=
SENTRY_ORG=

# ===========================================
# PRODUCTION OPTIMIZATION
# ===========================================
# Compression
COMPRESSION_LEVEL=6

# Image Optimization
NEXT_PUBLIC_IMAGE_DOMAINS=localhost,127.0.0.1

# Security Headers
SECURITY_HEADERS=true
