{
  "extends": "../../tsconfig.base.app.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "types": [
      "node"
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true
  },
  "exclude": [
    "src",
    "src/**/*"
  ],
  "include": [
    "./*.ts",
    "./*.tsx",
    "./**/*.ts",
    "./**/*.tsx"
  ]
}