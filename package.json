{
  "name": "facturacion-autonomos-monorepo",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "license": "Apache-2.0",
  "description": "Monorepo modular para facturación de autónomos: Next.js frontend y backend desacoplado Node.js. Escalable, con CI/CD.",
  "scripts": {
    "dev:backend": "yarn workspace backend dev",
    "dev:frontend": "yarn workspace frontend dev",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.0.3",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "prisma": "^6.9.0",
    "swagger-ui-express": "^5.0.1"
  }
}
