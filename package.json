{
  "name": "facturacion-autonomos-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Plataforma unificada para gestión y facturación de autónomos",
  "keywords": ["monorepo", "facturas", "autonomos", "typescript", "nextjs", "express", "prisma"],
  "homepage": "https://github.com/tu-usuario/facturacion-autonomos-monorepo",
  "bugs": {
    "url": "https://github.com/tu-usuario/facturacion-autonomos-monorepo/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tu-usuario/facturacion-autonomos-monorepo.git"
  },
  "license": "Apache-2.0",
  "author": "Tu Nombre <tu.email@example.com>",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.9.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api-facturas": "turbo dev --filter=api-facturas",
    "dev:api-tax-calculator": "turbo dev --filter=api-tax-calculator",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:e2e": "turbo test:e2e",
    "test:e2e:ui": "turbo test:e2e:ui",
    "clean": "turbo clean && rm -rf node_modules",
    "setup": "yarn install && yarn db:generate && yarn db:push",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "copilot:test-all": "yarn test && yarn test:e2e",
    "adr:new": "node scripts/create-adr.js",
    "precommit": "lint-staged",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "prisma": "^6.1.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@prisma/client": "^6.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
