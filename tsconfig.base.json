{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node10",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/core": ["./packages/core/src"],
      "@/services": ["./packages/services/src"],
      "@/ui": ["./packages/ui/src"],
      "@/types": ["./packages/types/src"],
      "@/database/*": ["./packages/database/src/*"],
      "@/validation/*": ["./packages/validation/src/*"],
      "@/api-facturas/*": ["./apps/api-facturas/src/*"],
      "@/api-gateway/*": ["./apps/api-gateway/src/*"],
      "@/api-tax-calculator/*": ["./apps/api-tax-calculator/src/*"],
      "@/auth-service/*": ["./apps/auth-service/src/*"],
      "@/invoice-service/*": ["./apps/invoice-service/src/*"],
      "@/web/*": ["./apps/web/src/*"]
    },
    "allowArbitraryExtensions": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "apps/**/*",
    "packages/**/*"
  ],
  "exclude": ["node_modules", ".next", "dist", "build"]
}
