# 🗄️ DATABASE
DATABASE_URL="postgresql://usuario:password@localhost:5432/facturacion_autonomos"

# 🔐 AUTHENTICATION
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="tu-secret-super-seguro-aqui"

# 📧 EMAIL
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="tu-email@gmail.com"
SMTP_PASS="tu-password-app"

# 🏛️ AEAT API
AEAT_API_URL="https://prewww1.aeat.es/wlpl/TIKE-CONT/"
AEAT_NIF="12345678A"
AEAT_CERTIFICATE_PATH="/path/to/certificate.p12"
AEAT_CERTIFICATE_PASSWORD="certificate-password"

# 🔗 WEBHOOK
WEBHOOK_SECRET="webhook-secret-super-seguro"

# 🌍 ENVIRONMENT
NODE_ENV="development"
PORT=3000

# 📊 ANALYTICS
VERCEL_ANALYTICS_ID="your-analytics-id"

# 🔍 LOGS
LOG_LEVEL="info"

# 🚀 FEATURES FLAGS
FEATURE_OCR_ENABLED=true
FEATURE_PEPPOL_ENABLED=false
FEATURE_ADVANCED_REPORTS=true
