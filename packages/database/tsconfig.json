{
  "extends": "../../tsconfig.base.lib.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true
  },
  "references": [
    { "path": "../core" },
    { "path": "../types" }
  ],
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/generated/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
