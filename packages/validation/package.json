{
  "name": "@facturacion/validation",
  "version": "1.0.0",
  "description": "Sistema de validación y sanitización para facturación de autónomos españoles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "validation",
    "sanitization",
    "invoice",
    "spanish",
    "nif",
    "cif",
    "xss",
    "sql-injection",
    "security"
  ],
  "author": "Facturacion Autonomos Team",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/openai": "^2.0.30",
    "@fal-ai/serverless-client": "^0.15.0",
    "@vercel/blob": "^1.1.1",
    "ai": "^5.0.43",
    "isomorphic-dompurify": "^2.26.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "typescript": "^5.7.2"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js",
      "require": "./dist/schemas/index.js"
    },
    "./validators": {
      "types": "./dist/validators/index.d.ts",
      "import": "./dist/validators/index.js",
      "require": "./dist/validators/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.js",
      "require": "./dist/middleware/index.js"
    }
  }
}
